@using System.ComponentModel.DataAnnotations;
@using System.Web.Optimization
@using MVCBLOG.ENTITY.Model_Entity
@using MVCBLOG.WEBUI.Areas.Admin
@model MVCBLOG.ENTITY.Model_DTO.ContactDTO

@{
    ViewBag.Title = "Csrf";
    Layout = "~/Views/Shared/_LayoutDetailPage.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
@Styles.Render("~/bundles/css/genel")
@Scripts.Render("~/bundles/js/genel")
@Scripts.Render("~/bundles/js/ajaxvalidation")

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<script src="~/Content/js/jquery-ui.min.js"></script>
<link href="~/Content/css/Sh/SyntaxHighlighter.css" rel="stylesheet" />
<link type="text/css" rel="stylesheet" href="~/Content/css/Sh/shCore.css" />
<link type="text/css" rel="Stylesheet" href="~/Content/css/Sh/shThemeDefault.css" />
<script type="text/javascript" src="~/Content/js/Sh/XRegExp.js"></script> <!-- XRegExp is bundled with the final shCore.js during build -->
<script type="text/javascript" src="~/Content/js/Sh/shCore.js"></script>
<script src="~/Content/js/Sh/shBrushCSharp.js"></script>
<script src="~/Content/js/Sh/shBrushSql.js"></script>
<script src="~/Content/js/Sh/shBrushPhp.js"></script>
<script src="~/Content/js/Sh/shBrushJScript.js"></script>


<script>SyntaxHighlighter.config.stripBrs = true;</script>
<script type="text/javascript">SyntaxHighlighter.all();</script>


<div class="col-sm-12">
    <div class="well well-sm">
        <strong class="text-danger" style="float: left; font-size: 22px;">Cross-Site Scripting Ornek Form</strong>
        <br />
        <hr />
        @using (Html.BeginForm("Csrf", "Security", FormMethod.Post))
        {
            <div class="form-group">
                <label>Ad</label>
                @Html.TextBoxFor(x => x.NameDTO, new { @class = "form-control", id = "NameDTO", @placeholder = "Adınızı giriniz." })
            </div>
            <div class="form-group">
                <label>Soyad</label>
                @Html.TextBoxFor(x => x.SurnameDTO, new { @class = "form-control", id = "SurnameDTO", @placeholder = "Soyadınızı giriniz." })
            </div>

            <div class="form-group">
                <label>Mesaj</label>
                @Html.TextAreaFor(x => x.MessageDTO, new { @class = "form-control", id = "MessageDTO", @placeholder = "Mesajınızı giriniz." })
            </div>

            <div class="form-group">
                <br />
                <input id="submit" type="submit" value="Gönder" class="btn btn-primary">
            </div>
        }
        <br />  
        @Html.Partial("Partials/_PartialResultMessages")
    </div>

</div>



